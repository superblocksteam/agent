{
  "name": "@superblocks/wasm-sandbox-js",
  "private": true,
  "version": "0.0.1",
  "description": "WASM-based sandbox for secure JavaScript evaluation using QuickJS",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": "20.19.5"
  },
  "scripts": {
    "build": "npm run clean && npx tsc",
    "clean": "rimraf ./dist *tsbuildinfo",
    "lint": "eslint . --ext ts --max-warnings 0 --cache --cache-strategy content --cache-location ~/.cache/eslint/",
    "lint:fix": "eslint . --ext ts --fix --cache --cache-strategy content --cache-location ~/.cache/eslint/",
    "typecheck": "npx tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand"
  },
  "dependencies": {
    "quickjs-emscripten": "^0.31.0",
    "lodash": "^4.17.21",
    "moment": "2.29.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.5.4"
  }
}
