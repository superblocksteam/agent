{
  "name": "@superblocksteam/graphql",
  "version": "0.0.1",
  "description": "Superblocks GraphQL Plugin",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": "20.16.0",
    "npm": "^10.2.4"
  },
  "scripts": {
    "start": "chokidar '**/*.ts' '../../shared-backend/**/*' -c 'npm run build'",
    "build": "swc src -d dist",
    "clean": "rimraf ./dist *tsbuildinfo",
    "lint": "eslint . --ext ts --max-warnings 0 --cache --cache-strategy content --cache-location ~/.cache/eslint/",
    "lint:fix": "eslint . --ext ts --fix --cache --cache-strategy content --cache-location ~/.cache/eslint/",
    "lint:precommit": "eslint --ext ts --fix --cache --cache-strategy content --cache-location ~/.cache/eslint/",
    "typecheck": "npx tsc",
    "check": "npm run typecheck && npm run lint",
    "test": "jest",
    "pre-commit": "tsc && lint-staged"
  },
  "dependencies": {
    "@superblocks/shared": "workspace:*",
        "lodash": "^4.17.21",
    "minimist": "1.2.6"
  },
  "devDependencies": {
    "@swc/cli": "0.6.0",
    "@swc/core": "1.7.26",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "chokidar-cli": "3.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "rimraf": "^5.0.0",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "pnpm lint:precommit"
    ]
  }
}
